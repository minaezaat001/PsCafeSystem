@model PcAppMaster.Models.ViewModel.DrinkReceiptForDrinksViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/vandors/bootstrap.min.css" />
    <!-- Fontawsome -->
    <link rel="stylesheet" href="~/css/vandors/all.min.css" />
    <!-- Mian-Style -->
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Login</title>
</head>

<body>

    <Form asp-action="AddDrink">
        <div class="popup-content-drink py-4 px-3">
            <div class="text-center">
                <h2 class="title-page"> Add Drink </h2>
            </div>
            <div class="text-center mt-5 set">
                <div class="box-from w-50 mx-auto d-flex align-items-center justify-content-center">
                    <i class="fa fa-tv colorWhait bg-main-color "></i>
                    <input class="w-100 mb-3 border p-2 set-num-ps" value="@ViewContext.RouteData.Values["id"]" type="text" placeholder="PS Number" readonly />
                </div>
                <select asp-for="@Model.DrinkId" class="list-drinks ttrr w-50 mb-3 border p-2">
                    <option value="-1">--- Select Drink---</option>
                    @foreach (var item in Model.Drinks)
                    {
                        <option value="@item.DrDrinkId">@item.DrDrinkName</option>
                    }
                </select>

                <div class="box-from w-50 mx-auto d-flex align-items-center justify-content-center">
                    <input asp-for="@Model.RfDrinkprice" class="getprice w-100 mb-3 border p-2" type="text" placeholder="Price" readonly>
                    <i class="fa fa-dollar-sign colorWhait bg-main-color "></i>
                </div>

                <input asp-for="@Model.RfDrinkQut" class="getqut w-50 mb-3 border p-2 d-block mx-auto" type="number" value="1" min="1">

                <button type="submit" class="add-resetdrink btn border w-25 bg-color-add colorWhait">Add</button>
            </div>
        </div>
    </Form>

    <!----Start Main Footer -->
    <footer class="py-3 footer bg-main-color colorWhait bottom">
        <div class="text-center">
            <span class="copy-right font-size">Copy Right &copy; 2020 Pnetworkers</span>
        </div>
    </footer>
    <!-- ================================================
    End Main Footer -->
    <!-- Laibiry-Jquery -->
    <script src="~/js/vandors/jquery.js"></script>
    <!-- Bootstarp -->
    <script src="~/js/vandors/bootstrap.min.js"></script>
    <!-- Timer-Libiry -->
    <script src="~/js/time.js"></script>
    <!-- Main Script -->
    <script src="~/js/main.js"></script>
    <script>
        //Drinks Search
        //Get price in receipt for drinks
        $('.list-drinks').change(function () {

            $.ajax({
                url: "/Admin/Search/" + $(this).val(),
                type: "Get",
                success: function (data) {
                    $('.getprice').val(data.drDrinkPrice);
                }

            })
        });

    </script>
</body>
</html>


