
@model PcAppMaster.Models.Receipt

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/vandors/bootstrap.min.css" />
    <!-- Fontawsome -->
    <link rel="stylesheet" href="~/css/vandors/all.min.css" />
    <!-- Mian-Style -->
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Login</title>
</head>

<body>

    <div class="drinks pt-5">
        <div class="container">
            <div class="text-center py-5">
                <h2 class="title-page"> Account </h2>
            </div>
            <div class="row">
                <div class="col-md-4 my-4">
                    <div class="box-aria text-center py-3">
                        <i class="fa fa-tv"></i>
                        <h4 class="title">PS Numper :</h4>
                        <span class="info-title">@ViewBag.pc</span>
                    </div>
                    <!-- ./box-ariao -->
                </div>
                <!-- col-md-3 -->
                <div class="col-md-4 my-4">
                    <div class="box-aria text-center py-3">
                        <i class="fa fa-stopwatch"></i>
                        <h4 class="title">Time  :</h4>
                        <input asp-for="@Model.RecTotalMinutes" class="info-title" > <span class="mt-2">Min</span>
                    </div>
                    <!-- ./box-aria -->
                </div>
                <!-- col-md-3 -->
                <div class="col-md-4 my-4">
                    <div class="box-aria text-center py-3">
                        <i class="fa fa-dollar-sign"></i>
                        <h4 class="title">Price :</h4>
                        <input asp-for="@Model.RecHoursPrice" class=" pricehours info-title" type="text" placeholder="Price Hours" readonly disabled> <span>Egp</span>

                    </div>
                    <!-- ./box-aria -->
                </div>
                <!-- col-md-3 -->

                <div class="col-md-6 my-5">
                    <div class="box-drinks text-center py-3">
                        <i class="fas fa-beer"></i>
                        <h4 class="title mt-4">Drinks Price:</h4>
                        <input asp-for="@Model.RecDrinkPrice" class="pricedrink info-title" type="text" placeholder="Price Dirnk" readonly disabled> <span>Egp</span>

                        <div class="table-wrapper-scroll-y my-custom-scrollbar">
                            <table class="table table-hover mt-4table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Drink Name</th>
                                        <th scope="col">Quntaity</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in (List<ReceiptForDrinks>)ViewBag.listofdrinks)
                                    {
                                        <tr>
                                            <th scope="row">@item.RfDrink</th>
                                            <td>@item.RfDrinkQut</td>
                                            <td>@item.RfDrinkTotal</td>
                                        </tr>
                                        
                                    }

                                 
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <!-- ./box-aria -->
                </div>
                <!-- col-md-6 -->
                <div class="col-md-6 my-5">
                    <div class="box-aria text-center py-3">
                        <i class="fas fa-hand-holding-usd"></i>
                        <h4 class="title">Total  :</h4>
                        <input asp-for="@Model.RecTotal" class="total info-title" type="text" placeholder="Total" readonly disabled> <span>Egp</span>

                    </div>
                    <!-- ./box-aria -->
                </div>
                <!-- col-md-6 -->
            </div>
            <!-- row -->
        </div>
        <!-- ./Container -->
    </div>
    <!-- End Drinks -->
    <!----Start Main Footer -->
    <footer class="py-3 footer bg-main-color colorWhait bottom">
        <div class="text-center">
            <span class="copy-right font-size">Copy Right &copy; 2020 Pnetworkers</span>
        </div>
    </footer>
    <!-- ================================================
    End Main Footer -->
    <!-- Laibiry-Jquery -->
    <script src="~/js/vandors/jquery.js"></script>
    <!-- Bootstarp -->
    <script src="~/js/vandors/bootstrap.min.js"></script>
    <!-- Timer-Libiry -->
    <script src="~/js/time.js"></script>
    <!-- Main Script -->
    <script src="~/js/main.js"></script>
</body>
</html>
